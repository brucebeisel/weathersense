<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:element name="weather">
        <xs:annotation>
            <xs:documentation>Comment describing your root element</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element name="station">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="station_id"/>
                            <xs:element name="location">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="latitude"/>
                                        <xs:element name="longitude"/>
                                        <xs:element name="altitude"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="record">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="time"/>
                            <xs:element name="data">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="outdoor">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element ref="humidity"/>
                                                    <xs:element ref="temperature"/>
                                                    <xs:element name="pressure">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="barometric" type="pressure"/>
                                                                <xs:element name="atmospheric" type="pressure"/>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="wind">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="speed">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="sustained"/>
                                                                            <xs:element name="gusts"/>
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                                <xs:element name="direction"/>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="precipitation"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="indoor">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element ref="temperature"/>
                                                    <xs:element ref="humidity"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="temperature">
        <xs:complexType>
            <xs:attribute name="units" use="required">
                <xs:simpleType>
                    <xs:list itemType="xs:token"/>
                </xs:simpleType>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
    <xs:element name="humidity"/>
    <xs:complexType name="pressure">
        <xs:simpleContent>
            <xs:extension base="xs:double"/>
        </xs:simpleContent>
    </xs:complexType>
</xs:schema>
